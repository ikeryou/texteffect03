


# ---------------------------------------------------
# ポイントクラス
# ---------------------------------------------------
class Point


  # -----------------------------------------------
  # コンストラクタ
  # -----------------------------------------------
  constructor: (x, y, z)->

    @x = x || 0;
    @y = y || 0;
    @z = z || 0;



  # -----------------------------------------------
  #
  # -----------------------------------------------
  subtract: (pt) =>

    return new Point(@x - pt.x, @y - pt.y)



  # -----------------------------------------------
  #
  # -----------------------------------------------
  copy: (point) =>

    @x = point.x
    @y = point.y
    @z = point.z



  set: (x, y, z) =>

    @x = x || 0;
    @y = y || 0;
    @z = z || 0;
















module.exports = Point;
